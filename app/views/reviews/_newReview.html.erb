
<h3>Create Review</h3>
<%= form_for([@book, @book.reviews.build]) do |review| %>
    <p class='form-group'>
        <%= review.label :score %>
        <%= review.text_field :score, :class => 'form-control'%>
    </p>
     <p class='form-group'>
        <%= review.label :comments%>
        <%= review.text_area :comments, :class => 'form-control'%>
    </p>
    <p class='form-group'>
        <%= review.submit :class => 'btn btn-default'%>
    </p>
<% end %>